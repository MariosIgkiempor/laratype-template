{
    "$schema": "https://getcomposer.org/schema.json",
    "name": "marios-igkiempor/laravel-template",
    "type": "project",
    "description": "My opinionated Laravel starter template",
    "keywords": [
        "laravel",
        "template"
    ],
    "license": "MIT",
    "require": {
        "php": "^8.2",
        "laravel/framework": "^11.37",
        "laravel/jetstream": "^5.3.4",
        "laravel/sanctum": "^4.0.7",
        "laravel/tinker": "^2.10",
        "livewire/livewire": "^3.5.18",
        "lorisleiva/laravel-actions": "^2.8.5"
    },
    "require-dev": {
        "driftingly/rector-laravel": "^2.0.1",
        "fakerphp/faker": "^1.24.1",
        "larastan/larastan": "^3.0.2",
        "laravel/pail": "^1.2.1",
        "laravel/pint": "^1.19",
        "laravel/sail": "^1.39.1",
        "mockery/mockery": "^1.6.12",
        "nunomaduro/collision": "^8.5",
        "nunomaduro/mock-final-classes": "^1.2",
        "pestphp/pest": "^3.7.1",
        "pestphp/pest-plugin-laravel": "^3.0",
        "pestphp/pest-plugin-type-coverage": "^3.2.3",
        "rector/rector": "^2.0.6"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,

    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi",
            "@php -r \"file_exists('database/database.sqlite') || touch('database/database.sqlite');\"",
            "@php artisan migrate --graceful --ansi"
        ],
        "dev": [
            "Composer\\Config::disableProcessTimeout",
            "npx concurrently -c \"#93c5fd,#c4b5fd,#fb7185,#fdba74\" \"php artisan serve\" \"php artisan queue:listen --tries=1\" \"php artisan pail --timeout=0\" \"npm run dev\" --names=server,queue,logs,vite"
        ],
        "refactor": "rector",
        "lint:php": [
            "@php vendor/bin/pint @additional_args"
        ],
        "lint:blade": [
            "npx prettier --write @additional_args"
        ],
        "lint": [
            "@lint:php-file",
            "@lint:blade-file resources/"
        ],
        "test:refactor": "@php vendor/bin/rector --dry-run",
        "test:lint": [
            "@php vendor/bin/pint --test",
            "npx prettier --check resources/"
        ],
        "test:types": "@php vendor/bin/pest --colors=always --type-coverage --memory-limit=512M --min=100",
        "test:static-analysis": "@php vendor/bin/phpstan analyse --ansi --memory-limit=512M",
        "test:unit": "herd coverage vendor/bin/pest --colors=always --coverage --parallel --min=100",
        "test": [
            "@test:refactor",
            "@test:lint",
            "@test:types",
            "@test:static-analysis",
            "@test:unit"
        ]
    }
}
